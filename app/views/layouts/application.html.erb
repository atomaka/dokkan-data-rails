<!DOCTYPE html>
<html>
<head>
  <title>DbzdokkanRails</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <% if logged_in? %>
    <p><%= link_to 'Logout', logout_path, method: :delete %></p>
